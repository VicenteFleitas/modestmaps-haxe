package com.modestmaps.extras.ui;import openfl.display.MovieClip;import openfl.text.TextField;import openfl.text.TextFieldAutoSize;    /** * @author David Knape */class Tooltip extends MovieClip{	public var background:MovieClip;	public var label_txt:TextField;		public function Tooltip()	{		this.visible = false;	}		public function setLabel ( str: String )	{        			label_txt.autoSize = TextFieldAutoSize.LEFT;		label_txt.width = 200;		label_txt.multiline = label_txt.wordWrap = true;        			label_txt.text = str;        			background.width = Math.max( 100, label_txt.textWidth + 10);		background.height = label_txt.textHeight + 18;		background.y = Math.round( -background.height - 16 );		label_txt.y = background.y + 2;	}}